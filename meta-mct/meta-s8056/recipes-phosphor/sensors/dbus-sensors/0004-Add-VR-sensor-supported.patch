From 0dc689d455ed1d9024ae34ef38536d12c3c8da49 Mon Sep 17 00:00:00 2001
From: Osmond Chen <osmond.chen@mic.com.tw>
Date: Tue, 22 Mar 2022 17:08:21 +0800
Subject: [PATCH] Add VR sensor supported

---
 meson.build               |  1 +
 meson_options.txt         |  1 +
 service_files/meson.build |  1 +
 src/meson.build           | 20 +++++++++++++++++++-
 4 files changed, 22 insertions(+), 1 deletion(-)

diff --git a/meson.build b/meson.build
index 98fba3f..fbf2462 100755
--- a/meson.build
+++ b/meson.build
@@ -22,6 +22,7 @@ add_project_arguments(
     '-DBOOST_ASIO_DISABLE_THREADS',
     '-DBOOST_ALLOW_DEPRECATED_HEADERS',
     '-Wno-unused-parameter',
+    '-Wno-reorder',
     language: 'cpp',
 )
 
diff --git a/meson_options.txt b/meson_options.txt
index 2c29c8f..e4e8f46 100755
--- a/meson_options.txt
+++ b/meson_options.txt
@@ -11,6 +11,7 @@ option('nvme-mi-mctp', type: 'feature', value: 'disabled', description: 'Manage
 option('psu', type: 'feature', value: 'enabled', description: 'Enable PSU sensor.',)
 option('external', type: 'feature', value: 'enabled', description: 'Enable External sensor.',)
 option('event', type: 'feature', value: 'enabled', description: 'Enable Event-only sensor.',)
+option('vr-temp', type: 'feature', value: 'enabled', description: 'Enable VR temperature sensor.',)
 option('tests', type: 'feature', value: 'enabled', description: 'Build tests.',)
 option('validate-unsecure-feature', type : 'feature', value : 'disabled', description : 'Enables unsecure features required by validation. Note: mustbe turned off for production images.',)
 option('insecure-sensor-override', type : 'feature', value : 'disabled', description : 'Enables Sensor override feature without any check.',)
diff --git a/service_files/meson.build b/service_files/meson.build
index a52b821..a6a128a 100755
--- a/service_files/meson.build
+++ b/service_files/meson.build
@@ -11,6 +11,7 @@ unit_files = [
     ['psu', 'xyz.openbmc_project.psusensor.service'],
     ['external', 'xyz.openbmc_project.externalsensor.service'],
     ['event', 'xyz.openbmc_project.eventsensor.service'],
+    ['vr-temp', 'xyz.openbmc_project.vrtempsensor.service'],
 ]
 
 foreach tuple : unit_files
diff --git a/src/meson.build b/src/meson.build
index c51c0a9..30c4d17 100755
--- a/src/meson.build
+++ b/src/meson.build
@@ -209,4 +209,22 @@ if get_option('event').enabled()
             utils_a,
         ],
     )
-endif
\ No newline at end of file
+endif
+
+if get_option('vr-temp').enabled()
+    executable(
+        'vrtempsensor',
+        'VRTempSensor.cpp',
+        dependencies: [
+            i2c, 
+            sdbusplus,
+        ],
+        implicit_include_directories: false,
+        include_directories: '../include',
+        install: true,
+        link_with: [
+            thresholds_a,
+            utils_a,
+        ],
+    )
+endif
-- 
